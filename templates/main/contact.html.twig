{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
  <div class="presentation-section">
      <h1 style="text-shadow: 0px 0px 10px #1e1e1e93;">Need assistance ? </br>Contact us.</h1>
      </br></br>
      <img src="{{asset('img/arrows.svg')}}" class="moving-arrows"/>
  </div>

  <div class="section">
    <div class="section-group">
      <div class="column">
        <h2>I have lost access to my account.</h2>
        <h3>Forgotten access codes</h3>
        <p>Forgotten your login details ? No worries, we've got you covered.Follow these simple steps to reset your password :</p>
          <h4>During your login :</h4>
          <ul>
            <li>Select the option titled "Forgot your password?"</li>
            <li>Access your mailbox.</li>
            <li>An administrator will send you a mail to reset your password.</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="section">
    <div class="section-group">
      <div class="column">
        <h2>We are here for you</h2>
        <h3>A customer service (truly) attentive</h3>
        <p>Our customer service is available 7 days/week to answer</br>
        all your questions.</p>
        <img src="{{asset('img/paper-plane.svg')}}" style="padding: 50px;"/>
      </div>
    </div>
    <div class="section-group">
      <form class="p-3">
        <div class="row mb-3">
          <div class="col-md-6 mb-3">
            <label for="firstNameField">First Name</label>
            <input type="text" class="form-control" id="firstNameField" aria-label="First name">
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastNameField">Last Name</label>
            <input type="text" class="form-control" id="lastNameField" aria-label="Last Name">
          </div>
          <div class="col-12 mb-3">
            <label for="emailField">Email</label>
            <input type="email" class="form-control" id="emailField" aria-label="Email">
          </div>
          <div class="col-12">
            <label for="commentField">Message</label>
            <textarea class="form-control" id="commentField"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
{% endblock %}
