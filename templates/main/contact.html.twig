{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="presentation-section">
    <h1 style="text-shadow: 0px 0px 10px #1e1e1e93;">Need assistance ? </br>Contact us.</h1>
    </br></br>
    <img src="{{asset('img/arrows.svg')}}" class="moving-arrows"/>
</div>
<div class="section">
    <div class="section-group">
        <div class="column">
            <h2>I have lost access to my account.</h2>
            <h3>Forgotten access codes</h3>
            <p>Forgotten your login details ? No worries, we've got you covered. 
                Follow these simple steps to reset your password :</br>
                </br>
                During your login :</br>
                > Select the option titled "Forgot your password?" </br>
                > Access your mailbox.</br>
                > An administrator will send you a mail to reset your password.
            </p>
        </div>
    </div>
</div>
<div class="section">
    <div class="section-group">
        <div class="column">
            <h2>We are here for you</h2>
            <h3>A customer service (truly) attentive</h3>
            <p>Our customer service is available 7 days/week to answer</br> 
            all your questions.</p>
            <img src="{{asset('img/paper-plane.svg')}}" style="padding: 50px;"/>
        </div>
    </div>
    <div class="section-group">
        <form>
            <div class="form-section">
                <div class="input-element">
                    <label for="FirstName" class="label">First Name</label>
                    <input type="text" class="stylized-input" placeholder="John" id="FirstName">
                </div>
                <div class="input-element">
                    <label for="LastName" class="label">Last Name</label>
                    <input type="text" class="stylized-input" placeholder="Doe" id="LastName">
                </div>
            </div>
            <div class="form-section">
                <div class="input-element">
                    <label for="Email" class="label">Email address</label>
                    <input type="email" class="stylized-input" aria-describedby="emailHelp" placeholder="johndoe@gmail.com" id="Email">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
            </div>
            <div class="form-section">
                <div class="input-element">
                    <label for="YourMessage" class="label">Your Message</label>
                    <textarea class="form-input" placeholder="Enter your message" id="YourMessage"></textarea>
                </div>
                <!-- <input type="checkbox" class="form-check-input" id="Check1">
                <label class="label" for="Check1">Check me out</label> -->
            </div>
            <button type="submit" class="form-btn">Submit</button>
        </form>
    </div>
</div>
{% endblock %}
